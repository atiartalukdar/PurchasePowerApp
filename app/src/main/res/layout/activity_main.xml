<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Monthly Property Taxes : "
            android:textColor="@color/colorPrimary"
            android:id="@+id/monthlyPropertyTax1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Monthly Homeowners Insurance : "
            android:textColor="@color/colorPrimary"
            android:id="@+id/monthlyHomeownersIns1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Monthly Mortgage Insurance :"
            android:id="@+id/monthlyMortgageIns1"
            android:layout_marginBottom="14dp"
            android:textColor="@color/colorPrimary" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Probable Max DTI"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="left"
            android:layout_gravity="left"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnrPorbableMaxDTI"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Taxes &amp; Insurance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView4"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="New Text"
            android:textStyle="bold|italic"
            android:id="@+id/monthlyTaxesIns"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Installment, Revolving, Taxes &amp; Ins."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView6"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="New Text"
            android:textStyle="bold|italic"
            android:id="@+id/totalTaxesIns"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principle &amp; Interest"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView7"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="New Text"
            android:textStyle="bold|italic"
            android:id="@+id/principleInterest"
            android:layout_gravity="left" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Interest Rate"
            android:id="@+id/textView8"
            android:gravity="left"
            android:paddingTop="10dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/spnrInterestRate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Amortization Term"
            android:id="@+id/textView9"
            android:gravity="left"
            android:paddingTop="10dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/spnrAmortizationTerm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:text="* After Any Changes Press on Update Button"
            android:id="@+id/tv"
            android:layout_marginBottom="15dp"

            android:gravity="center"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:layout_gravity="center_horizontal">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:onClick="onSetting"
                android:id="@+id/settingBtn" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:onClick="onReset"
                android:id="@+id/resetButtonSMS" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check"
                android:onClick="onCheck"
                android:id="@+id/onCheck" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>